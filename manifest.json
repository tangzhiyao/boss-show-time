{
    "manifest_version": 3,
    "name": "Boss Show-time",
    "version": "0.1.0",
    "description": "My Chrome Extension",
    "icons": {
        "16": "icons/icon.jpg",
        "32": "icons/icon.jpg",
        "48": "icons/icon.jpg",
        "128": "icons/icon.jpg"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": {
        "default_title": "Click to open panel"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'"
    },
    "content_scripts": [
        {
            "js": ["app.js"],
            "matches": [
                "https://www.zhipin.com/*",
                "https://sou.zhaopin.com/*",
                "https://we.51job.com/*",
                "https://www.lagou.com/*"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["proxyAjax.js", "app.css"],
            "matches": [
                "https://www.zhipin.com/*", 
                "https://sou.zhaopin.com/*",
                "https://we.51job.com/*",
                "https://www.lagou.com/*"
            ]
        }
    ],
    "side_panel": {
        "default_path": "sidepanel.html"
      },
    "permissions": [
        "webRequest",
        "offscreen",
        "sidePanel",
        "unlimitedStorage"
    ],
    "host_permissions": [
        "https://www.zhipin.com/*",
        "https://sou.zhaopin.com/*",
        "https://we.51job.com/*",
        "https://www.lagou.com/*"
    ]
}